---
import { config_site } from '../utils/config-adapter'
---
<link href="https://fonts.googleapis.com/css2?family=PT+Serif:ital,wght@0,400;0,700;1,400;1,700&family=Pixelify+Sans:wght@400..700&display=swap" rel="stylesheet">

<footer class="site-footer">
    <div class="footer-content">
        <div class="footer-bottom-text">
           <span class="copyrightFooter"> Â© 2025</span> <a href="https://github.com/xingwangzhe/stalux" target="_blank">Stalux</a> theme based.
        </div>
    </div>
</footer>

<!-- Footer Style -->

<style>

.site-footer {
  width: 100%;
  padding: 14px 0;
  text-align: center;
  margin-top: auto;
  font-size: 0.9rem;
  color: rgba(78, 186, 163, 0.9);
  background: rgb(0, 0, 0);
  margin-top: 30px;
  font-family: 'Pixelify Sans';
}

.copyrightFooter {
  font-family: sans;
}

.footer-content {
  display: flex;
  flex-direction: column;
  gap: 0.8rem;
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 1rem; 
}

.footer-bottom-text {
  display: block;
  font-size: 14px;
  color: #7ff8e8;
  text-align: center;
}

.footer-bottom-text a {
  color: inherit;
  text-decoration: none;
  font-family: 'Pixelify Sans';
}

.footer-bottom-text a:hover {
  text-decoration: underline;
}

@media (max-width: 768px) {
  .site-footer {
    padding: .5rem 0;
    font-size: 0.8rem;
  }

  .footer-content {
    gap: 0.6rem;
    padding: 0 0.8rem;
  }
}
</style>
