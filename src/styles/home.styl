// 此文件只包含全局样式或共享的基础样式
// 组件特定的样式已迁移到各自的组件中

.homeImg { 
  display: flex; 
  justify-content: center; 
}

// 共享的卡片样式属性
.glass-card {
  background-color: rgba(0, 0, 0, 0.021);
  backdrop-filter: blur(25px);
  border-radius: 10px;
  border: 1px solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 10px 35px rgba(0, 0, 0, 0.226);
  animation: fadeInUp 0.8s ease-in-out forwards;
  opacity: 0;
}

// 为不同的卡片设置不同的延迟
.glass-card:nth-child(1) { animation-delay: 0.1s; }
.glass-card:nth-child(2) { animation-delay: 0.2s; }
.glass-card:nth-child(3) { animation-delay: 0.3s; }
.glass-card:nth-child(4) { animation-delay: 0.4s; }
.glass-card:nth-child(5) { animation-delay: 0.5s; }
.glass-card:nth-child(n+6) { animation-delay: 0.6s; }

// 全局动画效果
@keyframes float {
  0% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10px);
  }
  100% {
    transform: translateY(0);
  }
}

.float-animation {
  animation: float 6s ease-in-out infinite;
}

// Home布局样式
html, body {
  height: 100%;
  margin: 0;
  padding: 0;
  overflow-x: hidden;
}

.container {
  width: 90%;
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 15px;
  flex: 1 0 auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-bottom: 200px;
}

.Hometitle {
  font-size: 3.0rem;
  display: flex;
  justify-content: center;
  animation: fadeInUp 0.8s ease-in-out forwards;
  opacity: 0;
  animation-delay: 0.1s;
  font-family: "Pixelify Sans", sans-serif;
}

.Hometitle h1 { 
background: linear-gradient(90deg, rgba(255, 255, 255, 0.95), rgba(78, 186, 163, 0.9));
    -webkit-background-clip: text
    -webkit-text-fill-color: transparent
    background-clip: text
    }


// Wrapper para centrar el bloque
.container-wrapper
  display flex
  justify-content center
  align-items center
  background transparent

.container-bloque
  position relative
  width 85%
  padding 1.5rem
  background rgba(0, 0, 0, 0.18)
  border-radius 1rem
  box-shadow 0 0 20px rgba(0, 0, 0, 0.2)
  color #f0f0f0
  font-family 'Fira Code', monospace
  font-size 0.95rem
  overflow visible
  transition all 0.3s ease
  margin-top -250px

  &:hover
    box-shadow 0 0 24px rgba(108, 108, 108, 0.35)
    transform scale(1.01)

.debian-img
  position absolute
  top -25px
  right -25px
  width 60px
  height auto
  opacity 0.9
  z-index 10
  pointer-events none
  filter drop-shadow(0 0 6px rgba(255, 0, 128, 0.3))


//BUTTON

.buttonHome {
  display: flex;
  justify-content: center; 
  align-items: center;
  margin-bottom: 30px;
}

.portfolio-button
    background: rgba(78, 186, 163, 0.9)
    border none
    border-radius 8px // Slightly rounded corners
    padding 12px 24px // Vertical and horizontal padding
    font-family: 'Pixelify Sans'; 
    display flex
    align-items center
    justify-content center
    gap 8px // Space between text and arrow

    &:hover
        filter brightness(1.1) // Slightly brighter on hover

.portfolio-button a {
      color:rgb(0, 0, 0)
}

.portfolio-button .arrow
    font-size 1.2em // Make the arrow slightly larger than the text
    margin-left 4px // Small margin to separate from text

// ───── MEDIA QUERIES ─────

@media (max-width: 768px)
  .container-bloque
    width 85%
    font-size 0.9rem
    padding 1.2rem
    margin-top -250px

  .debian-img
    width 50px
    top -20px
    right -20px

  .Hometitle h1
    font-size 3.8rem

@media (max-width: 480px)
  .container-bloque
    width 85%
    font-size 0.85rem
    padding 1rem
    margin-top -280px

  .debian-img
    width 40px
    top -15px
    right -15px

  .HometitleS h1
    font-size 3.5rem
